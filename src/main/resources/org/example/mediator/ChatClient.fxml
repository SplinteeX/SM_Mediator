<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mediator.ChatClientController">
    <Label text="Chat Client"/>
    <TextArea fx:id="messageArea" editable="false"/>
    <HBox>
        <TextField fx:id="recipientField" promptText="Recipient"/>
        <TextField fx:id="messageField" promptText="Message"/>
        <Button text="Send" onAction="#sendMessage"/>
    </HBox>
</VBox>
